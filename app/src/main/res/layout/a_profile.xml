<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.qs.minigridv5.activities.AProfile">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!--upper section-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
        >

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/a_profile_close_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_back_white_24dp"
                        android:padding="16dp"
                        android:layout_gravity="start|top"

                />

                <TextView
                        android:id="@+id/a_profile_lang_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_language"
                        android:padding="16dp"
                        android:textColor="@color/white"
                        android:layout_gravity="end|top"

                />

                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/a_profile_pic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/profile_photo_empty"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="16dp"
                        app:civ_border_width="4dp"
                        app:civ_border_color="@color/white"

                />
            </FrameLayout>

            <TextView
                    android:id="@+id/a_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Name"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_margin="6dp"
                    android:textColor="@color/white"/>

            <TextView
                    android:id="@+id/a_profile_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="State"
                    android:textSize="18dp"
                    android:textColor="@color/white"/>

            <TextView
                    android:id="@+id/a_profile_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Company"
                    android:textSize="18dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>

            <Button
                    android:id="@+id/a_profile_edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@drawable/ic_mode_edit_white_24dp"
                    style="@style/MyNegativeButton"
                    android:text="@string/edit_profile"/>

        </LinearLayout>



        <!--lower section-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="top|center"
            >

                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/icn_claps"
                        android:layout_margin="18dp"
                />

                <TextView
                        android:id="@+id/a_profile_clap_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="26sp"
                        android:textColor="@color/colorPrimaryLight"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Claps"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimaryLight"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="top|center"
            >

                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/icn_published_films"
                        android:layout_margin="18dp"

                />

                <TextView
                        android:id="@+id/a_profile_published_films_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="26sp"
                        android:textColor="@color/colorPrimaryLight"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Published Films"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimaryLight"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="top|center"
            >

                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/icn_views"
                        android:layout_margin="18dp"
                />

                <TextView
                        android:id="@+id/a_profile_views_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="26sp"
                        android:textColor="@color/colorPrimaryLight"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Views"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimaryLight"
                />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
