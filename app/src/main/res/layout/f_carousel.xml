<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.qs.minigridv5.activities.AIntroCarousel$PlaceholderFragment">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
    >


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/f_intro_image"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
        />

        <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/fading_translu_bg"
                android:layout_gravity="bottom"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="32dp"
                android:orientation="vertical"
                android:layout_marginBottom="?attr/actionBarSize"
        >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/f_intro_header"
                    android:text="Header"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/f_intro_text"
                    android:text="nskjfnal nj na; akln fa klan"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
            />

        </LinearLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>