<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
    >
        <ImageView
                android:id="@+id/x_overall_overview_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/placeholder_img"
                android:layout_gravity="center_vertical"
        />
        <ImageView
                android:id="@+id/x_overall_overview_line"
                android:layout_width="56dp"
                android:layout_height="1dp"
                android:src="@drawable/white_rect"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
        />
        <TextView
                android:id="@+id/x_overall_overview_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:textColor="@color/white"
        />
    </FrameLayout>

    <TextView
            android:id="@+id/x_overall_overview_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aslkn lk nlak"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textSize="22dp"
            android:textColor="@color/white"
    />

    <TextView
            android:id="@+id/x_overall_overview_desc_text"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="aslkn lk nlak"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textAlignment="center"
    />

</LinearLayout>