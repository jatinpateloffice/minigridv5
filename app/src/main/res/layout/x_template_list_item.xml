<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="2dp">

    <FrameLayout
            android:id="@+id/x_movie_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/x_movie_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:tint="#4f000000"
                android:scaleType="centerCrop"
                android:src="@drawable/def_movie_thumbnail"/>

        <TextView
                android:id="@+id/x_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:padding="12dp"
                android:text="Some Movie"
                android:textColor="@color/white"
                android:textSize="24sp"
        />

        <ImageView
                android:id="@+id/x_movie_start"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="4dp"
                app:srcCompat="@drawable/ic_chevron_right_white_24dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
        />

    </FrameLayout>

</android.support.v7.widget.CardView>

