<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_gray</item>
    </style>

    <style name="DarkAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_color</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ParentButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="MyButton" parent="ParentButton">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="MyNegativeButton" parent="ParentButton">
        <item name="colorButtonNormal">@color/colorPrimaryLight</item>
        <item name="android:background">@drawable/round_button_primary_light</item>
    </style>

    <style name="MyWireButton" parent="ParentButton">
        <item name="android:background">@drawable/round_button_wire_white</item>
    </style>

    <style name="MyBlueWireButton" parent="ParentButton">
        <item name="android:background">@drawable/round_button_wire_blue</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyLightDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

</resources>
